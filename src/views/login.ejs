<!DOCTYPE html>
<html lang="<%= lang %>">
    <head>
        <meta charset="UTF-8">
        <title>Login â€” Antoine Mcx</title>
        <link rel="icon" href="/img/avatar.jpg" class="flavicon">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/antoinemcx.css">
        <link rel="stylesheet" media="screen and (max-width: 1250px)" href="/css/mobile.css">
		
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.0.0/css/all.css">
        <script src="https://code.jquery.com/jquery-latest.min.js"></script>
        <script src="https://kit.fontawesome.com/74ba3d64b1.js"></script>
    </head>

    <body class="light">
        <header><%- include('./parts/header'); -%></header>

        <style>
            .container .form .title { position: relative; font-size: 30px; font-weight: 600; }
            .form { width: 150% }
            .form .title::before{
                content: '';
                position: absolute;
                left: 0;
                bottom: -1px;
                height: 3px;
                width: 25px;
                background-color: var(--darkblurple);
                border-radius: 25px;
            }
            .form .input-field { position: relative; height: 50px; width: 100%; margin-top: 30px; }
            .form a:hover { text-decoration: underline; }
        </style>

        <div class="container container-login">
            <div class="forms">
                <div class="form login">
                    <span class="title"><%= translate.loginPage.title %></span>
                    <% if (messages.error) { %>
                        <span style="margin-left: 10px; color: var(--red)"><%= messages.error %></span>
                    <% } %>
    
                    <form action="/login" method="POST">
                        <div class="input-field">
                            <input type="email" id="email" name="email" placeholder="<%= translate.loginPage.form[0] %>" required>
                            <i class="fa-regular fa-envelope"></i>
                        </div>
                        <div class="input-field">
                            <input type="password" class="password" id="password" name="password" placeholder="<%= translate.loginPage.form[1] %>" required>
                            <i class="fa-regular fa-hashtag"></i>
                            <i class="fa-regular fa-eye-slash showPassword" id="showPassword"></i>
                        </div>
    
                        <div class="input-field button">
                            <button type="submit"><%= translate.loginPage.form[2] %></button>
                        </div>
                    </form>
    
                    <div class="login-signup">
                        <span class="text"><%= translate.loginPage.signup[0] %>
                            <a href="/register" class="text signup-link"><%= translate.loginPage.signup[1] %></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- JS FILES -->
        <script src="/js/main.js"></script>
        <script src="/js/url-shortener.js"></script>
        <app-notification></app-notification>
    </body>

    <div class="cookiealert">
        <div class="container m-auto">
            <div class="pl-3 pr-3">
                <div class="alert text-center cookiealert-content is-white w-100" role="alert">
                    &#x1F36A; <b><%= translate.header.cookies[0] %></b> <%= translate.header.cookies[1] %> <a href="https://cookiesandyou.com/" target="_blank"><%= translate.header.cookies[2] %></a>
                    <button type="button" class="btn btn-primary btn-sm acceptcookies"><%= translate.header.cookies[3] %></button>
                </div>
            </div>
        </div>
    </div>
</html>